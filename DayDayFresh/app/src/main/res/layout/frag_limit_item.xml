<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/affordshop_detail_border"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_16"
            android:background="@drawable/image_border">

            <ImageView
                android:id="@+id/my_limit_goodsimg"
                android:layout_width="@dimen/dip_90"
                android:layout_height="@dimen/dip_90"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_my_info_num"
                android:maxLines="2"
                android:text="@string/fav_limit"
                android:textColor="@color/white"
                android:textSize="@dimen/personal_texthint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dip_16"
            android:layout_marginTop="@dimen/dip_26"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_limit_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/personal_textview" />

            <LinearLayout
                android:id="@+id/limit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_limit_goodsname"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_concern_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dip_5"
                    android:paddingTop="@dimen/dip_5"
                    android:text=""
                    android:textColor="@color/personal_textview"
                    android:textSize="@dimen/personal_textview" />

                <TextView
                    android:id="@+id/my_limit_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/personal_hinttext"
                    android:textSize="@dimen/personal_textview" />
            </LinearLayout>

            <Button
                android:id="@+id/limit_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/limit_layout"
                android:background="@drawable/btn_order_topay"
                android:paddingBottom="@dimen/dip_5"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:paddingTop="@dimen/dip_5"
                android:text="@string/fav_shopping"
                android:textColor="@color/white"
                android:textSize="@dimen/size14" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>