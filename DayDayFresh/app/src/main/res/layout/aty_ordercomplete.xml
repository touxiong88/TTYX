<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afford.ui.activity.AtyOrderComplete">
    <RelativeLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/top_bg">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/dip_16"
            android:paddingLeft="@dimen/dip_16"
            android:paddingRight="@dimen/dip_24"
            android:paddingTop="@dimen/dip_16"
            android:src="@drawable/ico_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/order_success"
            android:textColor="@color/confirmorder_title"
            android:textSize="@dimen/confirmorder_title"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_title"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/padTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dip_16"
            android:drawableTop="@drawable/shopcar_icon_paysuccess"
            android:text="感谢您在大实惠购物"
            android:textColor="#555555"
            android:textSize="@dimen/size14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎再次光临"
            android:textColor="#555555"
            android:textSize="@dimen/size14" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete"
        android:layout_marginTop="@dimen/dip_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOrderEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/btn_order"
            android:gravity="center"
            android:paddingBottom="@dimen/dip_8"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_8"
            android:text="@string/order_evaluate"
            android:textColor="#DB3B34"
            android:textSize="@dimen/personal_textview" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_below="@+id/layoutComplete"
        android:background="@drawable/affordshop_detail_border"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip_6"
        android:paddingRight="@dimen/dip_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_8"
                android:layout_weight="1"
                android:padding="@dimen/dip_10"
                android:text="@string/app_name"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/personal_textview" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="@color/confirmorder_line" />

        <LinearLayout
            android:id="@+id/goods_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/all_order_goodsimg"
                android:layout_width="@dimen/dip_67"
                android:layout_height="@dimen/dip_67"
                android:layout_marginBottom="@dimen/dip_12"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_16"
                android:layout_marginTop="@dimen/dip_12"
                android:background="@drawable/home_image_border"
                android:padding="@dimen/dip_1"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_list" />

            <TextView
                android:id="@+id/all_order_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:text="xxx"
                android:textColor="@color/black"
                android:textSize="@dimen/size14" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="@color/confirmorder_line" />

        <LinearLayout
            android:id="@+id/line_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dip_10"
                android:text="@string/order_disbursements"
                android:textColor="@color/personal_textview"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/all_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_10"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:text="￥0.00"
                android:textColor="#C52720"
                android:textSize="@dimen/personal_textview" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_order_delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dip_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/all_order_but"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_order"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:paddingBottom="@dimen/dip_8"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_8"
            android:text="@string/allorder"
            android:textColor="@drawable/btn_order_clicktext"
            android:textSize="@dimen/personal_texthint" />
        <Button
            android:id="@+id/ord_back_but"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_40"
            android:background="@drawable/btn_order"
            android:gravity="center"
            android:paddingBottom="@dimen/dip_8"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_8"
            android:text="返回首页"
            android:textColor="@drawable/btn_order_clicktext"
            android:textSize="@dimen/personal_texthint" />
    </LinearLayout>
</RelativeLayout>
