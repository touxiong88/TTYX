<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_top_page" />

    <com.afford.ui.widget.WdtPagerSlidingTabStrip
        android:id="@+id/apps_fragment_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/white"
        app1:pstsDisplayNum="3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/apps_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AtyAppsListFragment" />

</LinearLayout>