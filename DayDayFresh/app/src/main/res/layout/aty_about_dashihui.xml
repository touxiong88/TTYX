<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/top_bg">

        <ImageButton
            android:id="@+id/my_address_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dip_16"
            android:paddingTop="@dimen/dip_16"
            android:paddingBottom="@dimen/dip_16"
            android:paddingRight="@dimen/dip_24"
            android:src="@drawable/ico_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_aboutour"
            android:textColor="@color/confirmorder_title"
            android:textSize="@dimen/confirmorder_title"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dip_50"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:padding="@dimen/dip_10"
            android:text="@string/about_intimate"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/personal_textview" />
        <TextView
            android:id="@+id/about_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versionName"
            android:padding="@dimen/dip_10"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/personal_textview"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_20"
            android:padding="@dimen/dip_10"
            android:text="@string/about_agreement"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/personal_textview" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:padding="@dimen/dip_10"
            android:text="@string/about_welcome"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/personal_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_30"
            android:padding="@dimen/dip_10"
            android:text="@string/about_copyright"
            android:textColor="@color/personal_hinttext"
            android:textSize="@dimen/personal_textview" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_copyright1"
            android:textColor="@color/personal_hinttext"
            android:textSize="@dimen/personal_textview" />
    </LinearLayout>
</LinearLayout>